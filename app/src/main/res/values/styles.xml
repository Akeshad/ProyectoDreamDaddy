<resources>

    <!-- BASE APPLICATION THEME -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/topApp</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- CUSTOM ACTION BAR -->
    <style name="DaddyActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/topApp</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TEXT HEADERS -->
    <style name="textHeaders">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- TEXT SUBHEADERS -->
    <style name="textSubHeaders">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- BUTTONS -->
    <style name="buttons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/button_fontColor</item>
        <item name="android:width">150dp</item>
    </style>

    <!-- EDIT TEXTS -->
    <style name="editTexts">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:ems">10</item>
        <item name="android:focusable">auto</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/button_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- FIRST SET OF IMAGEBUTTON - SUGARDADDY AND SUGARBABY ROLE SELECTION -->
    <style name="imageButtonRoleSelection">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:backgroundTint">@color/background</item>
    </style>

    <!-- SECOND SET OF IMAGEBUTTON - SUGARDADDY KIND SELECTION -->
    <style name="imageButtonDaddyKindSelection">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

</resources>
